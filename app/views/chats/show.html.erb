<div class="chats-box" data-controller="chat pagination" data-chat-conversation-id="<%= @conversation.id %>" data-pagination-conversation-id="<%= @conversation.id %>" data-current-user="<%= current_user.username %>">
<div id="chats_messages" data-chat-target="messages" data-pagination-target="messages">
<%= render 'chats/chat_conversation', chat_conversations: @chat_conversations %>
</div>
</div>

<%= form_with(model: [@conversation, @conversation.chat_conversations.build], url: chat_chat_conversations_path(@conversation), data: { remote: true }) do |form| %>
  <div class="bg-dark text-center p-4 position-fixed bottom-0 start-0 end-0 d-flex flex-column justify-content-center">
    <div id="fileInfo" class="file-info"></div>
    <div id="filePreview" class="file-preview"></div>

    <div class="input-container d-flex">
      <input id="inputField_chat" type="text" class="form-control" name="chat_conversation[content]" placeholder="Enter your message..." autocomplete="off">
      <label class="file-upload">
        <i class="fas fa-paperclip"></i>
        <input type="file" id="fileInput_chat" onchange="displayFileName()">
      </label>

      <button id="postChat" class="mainbtn">
      <i class="fas fa-paper-plane"></i>
      </button>
    </div>
  </div>
<% end %>
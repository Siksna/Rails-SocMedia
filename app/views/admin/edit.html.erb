<div class="flex-column">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
    </div>
    <div class="card-body">
      
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
   
      <%= form_with(model: @user, url: admin_path(@user), method: :patch, local: true) do |f| %>
        <%= f.label :username, "Username :", class: "mt-3" %>
        <%= f.text_field :username, placeholder: "Enter username", value: @user.username, class: "mb-2 form-control" %>
        <br>
        <%= f.label :email, "Email :", class: "mt-3" %>
        <%= f.text_field :email, placeholder: "Enter users email", value: @user.email, class: "mb-2 form-control" %>
        <br>
        <%= f.submit "Save", class: "btn btn-dark border-0 rounded-pill shadow p-3" %>
      <% end %>
      
      <%= button_to "Back", admin_personas_path, method: :get, class: "btn btn-dark border-0 rounded-pill shadow p-2 m-2" %>
      
    </div>
  </div>
</div>

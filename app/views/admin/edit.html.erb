<div class="flex-column">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Personu rediģēšana</h2>
    </div>
    <div class="card-body">
      
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
   
        <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
        <%= f.label :username, "Personas vārds :", class: "mt-3" %>
        <%= f.text_field :username, placeholder: "Ievadi personas vārdu", value: @user.username, class: "mb-2 form-control" %>
        <br>
        <%= f.label :email, "Epasts :", class: "mt-3" %>
        <%= f.text_field :email, placeholder: "Ievadi personas epastu", value: @user.email, class: "mb-2 form-control" %>
        <br>
        
        <%= f.submit "Saglabāt", class: "btn btn-dark border-0 rounded-pill shadow p-3" %>
      <% end %>
      
      <%= button_to "Atpakaļ", admin_personas_path, method: :get, class: "btn btn-dark border-0 rounded-pill shadow p-2 m-2" %>
    </div>
  </div>
</div>

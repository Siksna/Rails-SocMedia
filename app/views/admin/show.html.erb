<div class="flex-column" style="height:100vh;">
  <% if flash[:errors] %>
    <% flash.each do |name, message| %>
      <p class="text-danger"><%= message %></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5">
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Lietot훮ja dati</h2>
          </div>
          <div>
            <h2> <i class="fa-solid fa-circle-dot"></i> ID: <%= @user.id %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> Lietot훮jv훮rds: <%= @user.username %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> E-pasts: <%= @user.email %> </h2>
          </div>
          <div class="d-flex">
            <%= button_to raw("<i class='fa-sharp fa-solid fa-arrow-left'></i>"), admin_personas_path, method: :get, class:"btn btn-warning border-0 rounded-pill shadow p-2 m-2" %>
            <% unless @user.admin? || @user.head_admin? %>
            <%= button_to raw("<i class='fa-sharp fa-solid fa-gear'></i>"), edit_admin_path(@user), method: :get, class:"btn btn-primary border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to raw("<i class='fa-solid fa-trash'></i>"), admin_path(@user), method: :delete, data: { confirm: 'Parliecin훮ts?' }, class:"btn btn-danger border-0 rounded-pill shadow p-2 m-2" %>
            <% end %> 
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

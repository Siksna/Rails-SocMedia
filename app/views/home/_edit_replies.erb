<h1>Rediģēt Atbildi</h1>

<%= form_with model: [@message, @reply], local: true do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <%= form.submit 'Atjaunināt Atbildi', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Atpakaļ', message_path(@message), class: 'btn btn-secondary' %>
<h2>Edit reply</h2>

<%= form_for([@message, @reply]) do |f| %>
  <div class="field form-group">
    <%= f.label :content, 'Reply content' %><br />
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :file, 'Add or change a file' %>
    <%= f.file_field :file, class: 'form-control' %>
  </div>

  <% if @reply.file.attached? %>
    <p>Current file:</p>
    <% if @reply.file.content_type.start_with?('image/') %>
      <%= image_tag @reply.file, alt: 'Current file', style: 'max-width: 100%; height: auto;' %>
    <% else %>
      <%= link_to 'Download current file', rails_blob_path(@reply.file, disposition: 'attachment') %>
    <% end %>

    <div class="form-group">
      <%= f.check_box :remove_file %>
      <%= f.label :remove_file, 'Remove current file' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Back', message_path(@message), class: 'btn btn-secondary' %>

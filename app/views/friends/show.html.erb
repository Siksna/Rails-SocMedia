
<div class="flex-column" style="height:100vh;">
  
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Personu dati</h2>
          </div>
          <div>
            <h2> <i class="fa-solid fa-circle-dot"></i> ID: <%= @friend.id %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> Vards: <%= @friend.vards %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> Uzvards: <%= @friend.uzvards %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> Epasts: <%= @friend.epasts %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> Talrunis: <%= @friend.talrunis %> </h2>
            <h2> <i class="fa-solid fa-circle-dot"></i> Twitters: <%= @friend.twitters %> </h2>
          </div>
          <div class="d-flex">
          <%= button_to raw("<i class='fa-sharp fa-solid fa-arrow-left'></i>"), friends_path,method: :get ,class:"btn btn-warning border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to raw("<i class='fa-sharp fa-solid fa-gear'></i>") , edit_friend_path, method: :get ,class:"btn btn-primary border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to raw("<i class='fa-solid fa-trash'></i>"), friend_path, method: :delete ,class:"btn btn-danger border-0 rounded-pill shadow p-2 m-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
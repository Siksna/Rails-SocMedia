<div class="register-card border-light mb-3 shadow" style="max-width: 22rem;">
  <div class="register-header bg-dark text-white text-center fs-5 fw-bold">Register</div>

  <div class="register-body p-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "register-form", autocomplete: "off" }) do |f| %>
    
    <div class="mb-3">
      <%= f.label :email, class: "form-label fw-semibold" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            maxlength: 30,
            class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :username, class: "form-label fw-semibold" %>
      <%= f.text_field :username,
            maxlength: 30,
            class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label fw-semibold" %>
      <%= f.password_field :password,
            autocomplete: "new-password",
            placeholder: "#{@minimum_password_length} characters minimum",
            class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "Register",
            class: "btn btn-dark border-0 rounded-pill shadow-sm px-4 py-2",
            data: { disable_with: "Registering..." } %>
    </div>
  <% end %>

  <div class="separator my-3 text-center">
    <span class="separator-line"></span>
    <span class="separator-text px-2">or</span>
    <span class="separator-line"></span>
  </div>
  
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
  
  <div class="mt-2" style="color: red;">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
</div>
